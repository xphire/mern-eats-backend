generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_CONNECTION_STRING")
}


model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  auth0Id       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  email         String   @unique
  name          String?
  city          String?
  country       String?
  addressLine1  String?
  restaurant    Restaurant?
}


model Restaurant {
  id                      String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  user                    User @relation(fields: [userId], references: [id])
  name                    String
  city                    String
  country                 String
  deliveryPrice           Float
  estimatedDeliveryTime   Int
  cuisines                String[]
  imageUrl                String
  MenuItems               MenuItem[]
  userId                  String @db.ObjectId @unique
  

}


type MenuItem {
  name  String
  price Float
}



