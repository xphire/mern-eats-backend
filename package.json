{
  "name": "mern-eats-backend",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "concurrently \"yarn dev-spin\" \"yarn stripe\"",
    "stripe": "stripe listen --forward-to localhost:7000/stripe/api/checkout/webhook",
    "dev-spin" : "ts-node-dev  --respawn --transpile-only --import ./instrument.mjs ./src/index.ts",
    "build": "yarn install && tsc",
    "start": "export NODE_ENV=production && node dist/index.js"
  },
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.17.0",
    "@sentry/node": "^8.18.0",
    "@sentry/profiling-node": "^8.18.0",
    "cloudinary": "^2.3.1",
    "concurrently": "^8.2.2",
    "config": "^3.3.12",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "stripe": "^16.7.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/config": "^3.3.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.10",
    "eslint": "9.x",
    "globals": "^15.8.0",
    "nodemon": "^3.1.4",
    "prisma": "^5.17.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.18.0"
  }
}
